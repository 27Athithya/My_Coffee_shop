<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity12">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navigation_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <!-- Coffee Image Container -->
            <androidx.cardview.widget.CardView
                android:id="@+id/coffeeImageCard"
                android:layout_width="393dp"
                android:layout_height="269dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="19dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/coffeeImage"
                    android:layout_width="match_parent"
                    android:layout_height="268dp"
                    android:contentDescription="@string/coffee_image_desc"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mocha" />

                <ImageView
                    android:id="@+id/back_btn1"
                    android:layout_width="62dp"
                    android:layout_height="59dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/back_btn"
                    tools:layout_editor_absoluteY="7dp" />

            </androidx.cardview.widget.CardView>

            <!-- Rating Section -->
            <ImageView
                android:id="@+id/starIcon"
                android:layout_width="24dp"
                android:layout_height="23dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/star"
                android:tint="@color/gold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/coffeeImageCard"
                android:contentDescription="@string/rating_star" />

            <TextView
                android:id="@+id/ratingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="2dp"
                android:text="@string/rating_value"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/starIcon"
                app:layout_constraintTop_toTopOf="@id/starIcon" />

            <!-- Coffee Title -->
            <TextView
                android:id="@+id/coffeeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:text="@string/coffee_name"
                android:textColor="@color/black"
                android:textSize="36sp"
                app:layout_constraintStart_toEndOf="@id/ratingText"
                app:layout_constraintTop_toTopOf="@id/starIcon" />

            <!-- Coffee Description -->
            <TextView
                android:id="@+id/coffeeDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="9dp"
                android:text="@string/coffee_description"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/coffeeTitle" />

            <!-- Size Section -->
            <TextView
                android:id="@+id/sizeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="46dp"
                android:text="@string/size_label"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/coffeeDescription" />

            <!-- Size Options -->
            <LinearLayout
                android:id="@+id/sizeOptionsLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginEnd="47dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sizeLabel">

                <!-- Small Size -->
                <LinearLayout
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="45dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="36dp"
                        android:layout_height="54dp"
                        android:backgroundTint="@color/light_gray"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/cup"
                            android:contentDescription="@string/small_size" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/size_small"
                        android:textColor="@color/black"
                        android:textSize="10sp"/>

                </LinearLayout>

                <!-- Medium Size (Selected) -->
                <LinearLayout
                    android:layout_width="41dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="49dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="41dp"
                        android:layout_height="67dp"
                        android:backgroundTint="@color/medium_gray"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="2dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="41dp"
                            android:layout_gravity="center"
                            android:src="@drawable/cup"
                            android:contentDescription="@string/medium_size" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/size_medium"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                </LinearLayout>

                <!-- Large Size -->
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="99dp"
                        android:backgroundTint="@color/medium_gray"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="59dp"
                            android:layout_gravity="center"
                            android:src="@drawable/cup"
                            android:contentDescription="@string/large_size" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/size_large"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Sugar Level Section -->
            <TextView
                android:id="@+id/sugarLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="@string/sugar_label"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sizeOptionsLayout" />

            <!-- Sugar Level Options -->
            <LinearLayout
                android:id="@+id/sugarOptionsLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sugarLabel">

                <!-- 30% Sugar (Selected) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="58dp"
                    android:layout_height="23dp"
                    android:layout_marginEnd="36dp"
                    android:backgroundTint="@color/dark_brown"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/sugar_30"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </androidx.cardview.widget.CardView>

                <!-- 40% Sugar -->
                <androidx.cardview.widget.CardView
                    android:layout_width="58dp"
                    android:layout_height="23dp"
                    android:layout_marginEnd="38dp"
                    android:backgroundTint="@color/light_gray_transparent"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/sugar_40"
                        android:textColor="@color/black"
                        android:textSize="13sp"/>

                </androidx.cardview.widget.CardView>

                <!-- 50% Sugar -->
                <androidx.cardview.widget.CardView
                    android:layout_width="58dp"
                    android:layout_height="23dp"
                    android:backgroundTint="@color/light_gray_transparent"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/sugar_50"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Quantity and Price Section -->
            <LinearLayout
                android:id="@+id/quantityPriceLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sugarOptionsLayout">

                <!-- Decrease Button -->
                <androidx.cardview.widget.CardView
                    android:layout_width="28dp"
                    android:layout_height="27dp"
                    android:backgroundTint="@color/light_gray"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/minus_symbol"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                </androidx.cardview.widget.CardView>

                <!-- Quantity -->
                <TextView
                    android:id="@+id/quantityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="@string/quantity_one"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <!-- Increase Button -->
                <androidx.cardview.widget.CardView
                    android:layout_width="28dp"
                    android:layout_height="27dp"
                    android:backgroundTint="@color/light_gray"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/plus_symbol"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>

                </androidx.cardview.widget.CardView>

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Price -->
                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_value"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- Add to Cart Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/addToCartButton"
                android:layout_width="262dp"
                android:layout_height="45dp"
                android:layout_marginTop="135dp"
                android:backgroundTint="@color/orange_primary"
                app:cardCornerRadius="28dp"
                app:cardElevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/quantityPriceLayout"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/add_to_cart"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- Fixed Navigation Bar -->
    <include
        android:id="@+id/navigation_bar"
        layout="@layout/activity_main10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>